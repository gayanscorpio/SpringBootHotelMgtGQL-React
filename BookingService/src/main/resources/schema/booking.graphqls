type Booking {
  id: ID!
  userId: ID!
  hotelId: ID!
  roomId: String
  checkInDate: String
  checkOutDate: String
  status: String
  totalPrice: Float
}

type Query {
  bookingById(id: ID!): Booking
  allBookings: [Booking]
  bookingsByUser(userId: ID!): [Booking]
}

type Mutation {
  createBooking(
    userId: ID!
    hotelId: ID!
    roomId: String
    checkInDate: String!
    checkOutDate: String!
    totalPrice: Float!
  ): Booking

  cancelBooking(id: ID!): Booking
}
