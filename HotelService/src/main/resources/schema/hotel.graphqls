type Hotel {
    id: ID!
    name: String!
    city: String!
    address: String
    stars: Int
}

input HotelInput {
    id: ID 
    name: String!
    city: String!
    address: String
    stars: Int
}

type Query {
    hotelById(id: ID!): Hotel
    allHotels: [Hotel]
    hotelsByIds(ids: [ID!]!): [Hotel!]! 
}

type Mutation {
    createHotel(hotel: HotelInput!): Hotel
}
